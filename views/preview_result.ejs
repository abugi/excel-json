<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>Uplaoded</title>
  </head>
  <body>
    <main class="container preview-container">
      <h4>Invalid Data</h4>
      <% if(invalidData.length > 0){ %>
      <table class="table table-bordered table-striped">
        <thead>
          <th>Reg. No</th>
          <th>Name</th>
          <th>Class</th>
          <th>School</th>
          <th>Math</th>
          <th>English</th>
          <th>Biology</th>
          <th>Chemistry</th>
        </thead>
        <tbody>
          <% invalidData.forEach(function(r) { %>
          <tr>
            <td><%= r.reg_no %></td>
            <td><%= r.student_name %></td>
            <td><%= r.student_class %></td>
            <td><%= r.school %></td>
            <td><%= r.math %></td>
            <td><%= r.english %></td>
            <td><%= r.biology %></td>
            <td><%= r.chemistry %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% }else{ %>
      <div>No invalid data</div>
      <% } %>
      <hr />
      <h4>Valid Data</h4>
      <table class="table table-bordered table-striped">
        <thead>
          <th>Reg. No</th>
          <th>Name</th>
          <th>Class</th>
          <th>School</th>
          <th>Math</th>
          <th>English</th>
          <th>Biology</th>
          <th>Chemistry</th>
        </thead>
        <tbody>
          <% validData.forEach(function(r) { %>
          <tr>
            <td><%= r.reg_no %></td>
            <td><%= r.student_name %></td>
            <td><%= r.student_class %></td>
            <td><%= r.school %></td>
            <td><%= r.math %></td>
            <td><%= r.english %></td>
            <td><%= r.biology %></td>
            <td><%= r.chemistry %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <form
        id="save-result"
        enctype="multipart/form-data"
        action="saveresult"
        method="post"
      >
        <a
          href="https://appmart-test.herokuapp.com/"
          class="btn btn-default btn-md"
          >Go Back</a
        >
        <input type="submit" value="Save Result" name="submit" />
      </form>
    </main>
  </body>
</html>
